{
  "manifest_version": 3,
  "name": "Medium Public Only Posts",
  "version": "1.0.0",
  "author": "Ankur Vatsa",
  "description": "Clean Medium reading experience - removes member-only stories to show only free public posts you can read",
  "homepage_url": "https://github.com/ankurvatsa/mpop",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.medium.com/*",
    "*://medium.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.medium.com/*",
        "*://medium.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Medium Public Only Posts",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
